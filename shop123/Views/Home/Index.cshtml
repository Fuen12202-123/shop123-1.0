@model shop123.ViewModel.HomeViewModel

@{
    ViewBag.Title = "首頁";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css" />
<script src="https://cdn.bootcdn.net/ajax/libs/jquery/3.6.0/jquery.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>


<style>
    .owl-nav {
        display: none;
    }
</style>

<div class="owl-carousel owl-theme owl-nav">
    @{foreach (var item in Model.carousels)
        {
            <div class="item"> <a href="@Html.Raw(@Url.Action("categoryPage", "Home", new { catalogAId = @item.catalogAId, catalogBId = @item.catalogBId, page = 1 }))"><img style="width:100%" src="@item.carouselImg"></a></div>
        }
    }
</div>



<div class="row">
    <div class="col-md-12">        
            <h5>最新上架商品 </h5>
        </div>
    </div>

<div class="row d-flex justify-content-center">

    @{
        foreach (var item in Model.spu.Take(40))
        {

            <div class="card-deck col-12 col-sm-12 col-md-6 col-lg-4 col-xl-3 mb-3">
                <div class="card card ">
                    <img src="@item.spuImg1" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@item.spuName</h5>
                        <p class="card-text">@item.spuPrice</p>
                        <div class=" d-flex justify-content-between">
                            <button class="btn shadow-none" style="outline:0;"><i class="far fa-heart"></i></button>
                            <button class="btn shadow-none" style="outline:0;"><i class="fas fa-cart-plus"></i></button>
                        </div>
                    </div>
                   
                </div>                
            </div>
            @*<div class="box col-12 col-sm-12 col-md-6 col-lg-4 col-xl-3 " style="margin-bottom:8px" id="spu">
                    <div class="thumbnail" style="width: 100%; ">
                        <img class="img-responsive" title="Click to View Product detail" style="cursor:pointer; width:100%; height:100%;"
                             src="@item.spuImg1" />
                        <div class="caption " style="height:40px">
                            <h5>@item.spuName</h5>
                        </div>
                        <div class="caption">
                            <p>@item.spuPrice</p>
                        </div>
                        <div class="caption d-flex justify-content-between">
                            <button class="btn shadow-none" style="outline:0;"><i class="far fa-heart"></i></button>
                            <button class="btn shadow-none" style="outline:0;"><i class="fas fa-cart-plus"></i></button>
                        </div>
                    </div>
                </div>*@
        }
    }
</div>
<div class="d-flex justify-content-center ">
    <button class="btn shadow-none" style="outline:0;">@Html.ActionLink("瀏覽更多", "Allspu", "Home", new { @class = "text-dark px-4 text-decoration-none " })</button>
</div>


<script>
    $(".owl-carousel").owlCarousel({
        autoplay: true,
        loop: true, // 循環播放
        margin: 10, // 外距 10px
        nav: true, // 顯示點點

        responsive: {
            0: {
                items: 1 // 螢幕大小為 0~600
            },
            600: {
                items: 1 // 螢幕大小為 600~1000
            },
            1000: {
                items: 1 // 螢幕大小為 1000 以上
            }
        }
    });


</script>
